<div class="top-menu">
    <img src="icons/I_C_Banana.png" alt="" /><span class="popover-header">@Bananas</span>
    <AddBananas BananaAdded="AddBananas" />
</div>


@code {
    [Parameter]
    public int Bananas { get; set; } = 100;

    public void AddBananas(int value)
    {
        Bananas += value;
    }
}
